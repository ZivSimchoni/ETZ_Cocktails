<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.TiktokForSmarties" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="android:font">@font/merriweather_sans_italic</item>
    <!--Force the app to be Left to Right.        -->
    <item name="android:layoutDirection">ltr</item>
    <!--Boolean buttons : False        -->
    <item name="colorPrimary">@color/dark_blue_gray</item>
    <item name="colorPrimaryVariant">@color/blue_dark</item>
    <!--Boolean buttons : True        -->
    <item name="colorOnPrimary">@color/blue_dark</item>
    <item name="colorOnSecondary">@color/purple_200</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/white</item>
    <item name="colorSecondaryVariant">@color/dark_blue_almost_light</item>
    <!--On button click         -->
    <item name="colorAccent">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:navigationBarColor">@color/dark_blue_gray_almost_black</item>
    <item name="android:windowBackground">@color/dark_blue_gray_almost_black</item>
    <!--No clue dafuq is this yet.-->
    <item name="android:windowActionBar">@color/purple_200</item>
    <!--Font family.-->
    <item name="android:fontFamily">@font/oxygen</item>
    <item name="fontFamily">@font/oxygen</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
</style>
</resources>
