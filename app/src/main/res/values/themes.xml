<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.ETZ_Cocktails" parent="Theme.MaterialComponents.Light">
    <!-- Primary brand color -->
    <item name="colorPrimary">@color/blue_dark</item>
    <item name="colorPrimaryVariant">@color/blue_dark</item>
    <!-- Primary Text color -->
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color -->
    <item name="colorOnSecondary">@color/purple_bright</item>
    <item name="colorSecondary">@color/white</item>
    <item name="colorSecondaryVariant">@color/dark_blue_almost_light</item>
    <!--On button click  -->
    <item name="colorAccent">@color/teal_200</item>
    <!-- Status bar color -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <item name="android:navigationBarColor">@color/blue_aqua</item>
    <item name="android:windowBackground">@color/blue_aqua</item>
    <!--  TextFill  -->
    <item name="textFillColor">@color/black</item>
</style>
</resources>
